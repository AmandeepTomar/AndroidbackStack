<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitylifecycle.ActivityA">

    <Button
        android:id="@+id/btnActivityLifeCycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Life cycle"
        app:layout_constraintBottom_toTopOf="@+id/btnSingleActivityWith4Frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSingleActivityWith4Frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Activity With 4 Fragment Usecase."
        app:layout_constraintBottom_toTopOf="@+id/FragmentLifeCycle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnActivityLifeCycle" />

    <Button
        android:id="@+id/FragmentLifeCycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FragmentLifeCycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSingleActivityWith4Frag" />

    <Button
        android:id="@+id/FragmentLifeCycleWithActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment LifeCycle With Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragmentLifeCycle" />


</androidx.constraintlayout.widget.ConstraintLayout>